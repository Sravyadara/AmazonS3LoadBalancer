# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                                                          controllers.Application.index()
GET    /compute/AmazonS3/Buckets                                  controllers.Application.listBuckets()
GET    /compute/AmazonS3/BucketSize/:bucketName                   controllers.Application.bucketSize(bucketName:String)
POST    /compute/AmazonS3/Requests/:reqNum                        controllers.Application.Requests(reqNum:String)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                                 controllers.Assets.at(path="/public", file)
